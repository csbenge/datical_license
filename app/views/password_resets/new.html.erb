<% provide(:title, t('user_password_reset')) %>
<h2><%= yield(:title) %></h2>

<div class="row">
  <div class="large-12 columns large-centered">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>

      <%= f.submit t('btn_submit'), class: "button radius primary" %>
    <% end %>
  </div>
</div>
